---
import Logo from './Logo.astro';
---

<header class="relative z-10">
  <div class="absolute top-0 inset-x-0">
    <div class="inset-x-0" style="background: rgba(255, 255, 255, 0.3);">
      <div class="container mx-auto flex flex-row items-center justify-end py-2">
        <a href="/" class="text-white mx-2 my-4" style="margin-right: auto;">
          <Logo />
        </a>
        <a
          href="mailto:contact@bardos.foundation"
          class="hidden sm:inline hover:text-blue-500 text-blue-700 font-bold py-2 px-4 cursor-pointer"
        >
          contact@bardos.foundation
        </a>
        <a
          target="_blank"
          rel="noopener"
          href="https://docs.google.com/forms/d/1KI_mEhc9HifSRaXUX6J_he5Klk0YHvFeYO99qlZnd8s/viewform"
          class="bg-blue-700 hover:text-blue-300 text-white font-bold py-2 px-4 mr-2 rounded cursor-pointer"
          style="height: max-content;"
        >
          Apply Now
        </a>
      </div>
    </div>
    <div class="inset-x-0" style="background: rgba(50, 135, 90, 0.8);">
      <div class="container mx-auto flex flex-row text-white font-bold text-sm md:text-base uppercase rounded-lg py-4 font-montserrat">
        <a
          href="/who-we-are"
          class="px-2 border-r hover:text-green-300 truncate"
          style="border-color: rgba(255, 255, 255, 0.3);"
        >
          Who We Are
        </a>
        <a
          href="/what-we-do"
          class="px-2 border-r hover:text-green-300 truncate"
          style="border-color: rgba(255, 255, 255, 0.3);"
        >
          What We Do
        </a>
        <a
          href="/agota-award"
          class="px-2 border-r hover:text-green-300 truncate"
          style="border-color: rgba(255, 255, 255, 0.3);"
        >
          Agota Award
        </a>
        <a href="/denes-award" class="px-2 hover:text-green-300 truncate">
          Denes Award
        </a>
      </div>
    </div>
  </div>
</header>
