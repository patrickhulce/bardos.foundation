---
export interface Props {
  image: string;
  title: string;
  text: string;
  link?: string;
}

const { image, title, text, link } = Astro.props;
const imageClasses = `w-24 h-24 object-cover rounded flex-shrink-0 flex-grow-0`;
---

<div class="bg-white rounded p-6 w-full flex flex-row items-center overflow-hidden mb-8">
  <img class={imageClasses} src={image} />
  <div class="ml-4">
    <h3 class="text-xl">
      {link ? <a href={link}>{title}</a> : title}
    </h3>
    <p class="text-sm overflow-hidden">{text}</p>
  </div>
</div>
