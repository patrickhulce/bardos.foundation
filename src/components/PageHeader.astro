---
export interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="absolute inset-x-0" style="top: 200px;">
  <div class="container mx-auto text-white text-4xl text-center font-bold text-shadow-subtle">
    <h1>{text}</h1>
  </div>
</div>

<style>
  .text-shadow-subtle {
    text-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
  }
</style>
