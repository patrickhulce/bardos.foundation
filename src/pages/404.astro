---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404: Not Found" belowHeader={true}>
  <div class="container mx-auto py-16 px-4 text-center">
    <h1 class="text-6xl font-bold text-green-700 mb-4">404</h1>
    <h2 class="text-3xl mb-6">Page Not Found</h2>
    <p class="mb-8">The page you're looking for doesn't exist or has been moved.</p>
    <a href="/" class="bg-blue-700 hover:text-blue-300 text-white font-bold py-2 px-6 rounded">
      Return to Home
    </a>
  </div>
</Layout>
